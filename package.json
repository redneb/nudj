{
	"name": "nudj",
	"version": "0.1.0",
	"description": "Send push notifications from your CLI to your phone",
	"type": "module",
	"bin": {
		"nudj": "./dist/cli/index.js"
	},
	"files": [
		"dist/cli"
	],
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"dev:cli": "tsx src/cli/index.ts",
		"dev:web": "vite",
		"build": "npm run build:cli && npm run build:web",
		"build:cli": "tsc -b src/common/tsconfig.json && tsc -p src/cli/tsconfig.json",
		"build:cli:bundle": "tsc -b src/common/tsconfig.json && rollup -c",
		"build:web": "vite build && npm run build:cli:bundle && cp dist/nudj.js dist/web/nudj.js",
		"preview:web": "vite preview",
		"test": "vitest",
		"test:cli": "vitest --project cli",
		"test:web": "vitest --project web",
		"check": "npm run check:types && npm run check:lint",
		"check:types": "tsc -b src/common/tsconfig.json && tsc -p src/cli/tsconfig.json --noEmit && tsc -p src/web/tsconfig.json --noEmit && tsc -p src/web/tsconfig.test.json --noEmit",
		"check:lint": "eslint src",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@block65/webcrypto-web-push": "^1.0.2",
		"citty": "^0.2.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-replace": "^6.0.3",
		"@rollup/plugin-typescript": "^12.1.0",
		"@stylistic/eslint-plugin": "^5.7.1",
		"@types/node": "^22.10.0",
		"eslint": "^9.18.0",
		"eslint-plugin-solid": "^0.14.5",
		"globals": "^17.3.0",
		"jsdom": "^27.4.0",
		"rollup": "^4.30.0",
		"solid-js": "^1.9.4",
		"tslib": "^2.8.1",
		"tsx": "^4.19.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.7",
		"vite-plugin-solid": "^2.11.0",
		"vitest": "^4.0.18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/redneb/nudj.git"
	},
	"keywords": [
		"push",
		"notifications",
		"cli",
		"pwa",
		"web-push"
	],
	"license": "MIT"
}
